From 59a59339abb67a722687a5edde98cd46e6c4e1a9 Mon Sep 17 00:00:00 2001
From: Ricardo Neri <ricardo.neri-calderon@linux.intel.com>
Date: Tue, 17 Feb 2015 11:00:20 -0800
Subject: [PATCH] Makefile: allow build environments modify variables

Signed-off-by: Ricardo Neri <ricardo.neri-calderon@linux.intel.com>
---
 Make.defaults | 16 ++++++++--------
 1 file changed, 8 insertions(+), 8 deletions(-)

diff --git a/Make.defaults b/Make.defaults
index 95ba9d5..6f5baec 100644
--- a/Make.defaults
+++ b/Make.defaults
@@ -3,9 +3,9 @@ PREFIX := /usr
 
 HOSTARCH   = $(shell uname -m | sed s,i[3456789]86,ia32,)
 ARCH	   := $(shell uname -m | sed s,i[3456789]86,ia32,)
-INCDIR	   = -I$(TOPDIR)/include
+INCDIR	   += -I$(TOPDIR)/include
 CPPFLAGS   = -DCONFIG_$(ARCH)
-CFLAGS     = -g -O0
+CFLAGS     += -g -O0
 BUILDFLAGS := $(CFLAGS) $(ARCH3264) -Wall -fshort-wchar -fno-strict-aliasing -fno-merge-constants --std=gnu99 -D_GNU_SOURCE -Wno-unused-result -Wno-unused-function
 ASFLAGS    = $(ARCH3264)
 LDFLAGS	   = -nostdlib
@@ -14,12 +14,12 @@ INSTALL	   = install
 # XXX this is broken
 bindir     = /usr/bin/
 
-CC            = $(bindir)gcc
-AS            = $(bindir)as
-LD            = $(bindir)ld.bfd
-AR            = $(bindir)ar
-RANLIB        = $(bindir)ranlib
-OBJCOPY       = $(bindir)objcopy
+# CC            = $(bindir)gcc
+# AS            = $(bindir)as
+# LD            = $(bindir)ld.bfd
+# AR            = $(bindir)ar
+# RANLIB        = $(bindir)ranlib
+# OBJCOPY       = $(bindir)objcopy
 
 ifeq ($(ARCH),ia64)
   CFLAGS += -mfixed-range=f32-f127
